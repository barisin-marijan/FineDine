@model FineDine.Models.Establishment

@{
    ViewBag.Title = "Details";
}

<div class="container" style="padding: 0 15px 50px 15px">
    <div class="col-md-8">
        <h1 class="page-header">
            @Html.DisplayFor(model => model.Name)
            <small>
                @Html.DisplayFor(model => model.Location.City),
                @Html.DisplayFor(model => model.Location.Country)
            </small>
        </h1>
        <img class="img-responsive" src="http://placehold.it/900x300" alt="">
        <hr>
        <div class="col-lg-3 col-md-3 col-sm-3 thumb">
            <a class="thumbnail" href="#">
                <img class="img-responsive" src="http://placehold.it/400x300" alt="">
